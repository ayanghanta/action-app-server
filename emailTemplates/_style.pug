style.
  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    color: #333;
    margin: 0;
    padding: 0;
    -webkit-text-size-adjust: 100%; 
  }

  .email-container {
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background: #ffffff;
    border: 1px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .header {
    background-color: #4a4e69;
    color: #ffffff;
    text-align: center;
    padding: 20px;
    font-size: 28px;
    font-weight: bold;
    line-height: 1.2;
  }

  .footer {
    margin-top: 20px;
    font-size: 12px;
    color: #666;
    text-align: center;
    padding: 10px;
    border-top: 1px solid #ddd;
  }

  .button {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 24px;
    background-color: #4a4e69;
    color: #ffffff;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px;
    text-align: center;
    font-weight: bold;
  }

  .button:hover {
    background-color: #3c3f59;
  }

  .green-button {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 24px;
    border-radius: 5px;
    font-size: 16px;
    text-align: center;
    background-color: #28a745;
    color: white;
    text-decoration: none;
    font-weight: bold;
  }

  .green-button:hover {
    background-color: #218838;
  }

  .product-details {
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }

  .product-info {
    margin-left: 15px;
  }

  .product-info p {
    margin: 0;
  }

  .product-info p strong {
    color: #4a4e69;
  }

  img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 8px;
  }

  p {
    margin: 0 0 15px;
    line-height: 1.6;
  }

  /* Responsive Design */
  @media screen and (max-width: 600px) {
    .email-container {
      padding: 15px;
      border-radius: 0;
      box-shadow: none;
    }

    .header {
      font-size: 22px;
      padding: 15px;
    }

    .button, .green-button {
      font-size: 14px;
      padding: 10px 20px;
    }

    p {
      font-size: 14px;
    }
  }
